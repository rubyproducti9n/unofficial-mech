<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PluginsActivity">

    <ImageView
        android:id="@+id/bgImg1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:alpha="0.8"
        android:src="@drawable/ellipse_2"
        app:tint="@color/md_theme_inversePrimary" />

    <ImageView
        android:id="@+id/bgImg2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:src="@drawable/ellipse_3"
        app:tint="@color/md_theme_inversePrimary" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        app:cardElevation="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="18dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/round_arrow_back_ios_24" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginStart="18dp"
        android:fontFamily="@font/alata"
        android:letterSpacing="0.1"
        android:text="PLUGINS"
        android:textColor="@color/matte_White"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backBtn" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ai_plugin"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_margin="18dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="18dp"
        app:strokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backBtn">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="AI PLUGIN"
            android:textSize="18sp"
            android:padding="22dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="18dp"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/round_keyboard_arrow_right_24"/>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>