<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttendenceTrackerActivity">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView16"
        android:layout_width="600dp"
        android:layout_height="450dp"
        android:layout_marginTop="-180dp"
        android:backgroundTint="@color/matte_black"
        app:cardCornerRadius="900dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="48dp"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:padding="12dp"
        android:visibility="gone"
        android:text="0"
        android:textColor="@color/matte_White"
        android:textFontWeight="900"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:visibility="gone"
        android:text="Present students"
        android:textColor="@color/matte_White"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/present"
        app:layout_constraintStart_toStartOf="@+id/present"
        app:layout_constraintTop_toBottomOf="@+id/present" />

    <TextView
        android:id="@+id/roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="48dp"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:padding="12dp"
        android:text="0"
        android:textColor="@color/matte_White"
        android:textFontWeight="900"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:text="Roll No."
        android:textColor="@color/matte_White"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/roll"
        app:layout_constraintStart_toStartOf="@+id/roll"
        app:layout_constraintTop_toBottomOf="@+id/roll" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/makeAtt"
        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="188dp"
        android:padding="18dp"
        app:icon="@drawable/round_keyboard_arrow_right_24"
        app:iconSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sheets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:enabled="true"
        android:text="View sheet"
        app:iconSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>