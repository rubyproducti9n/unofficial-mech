<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetStart="@layout/activity_splash"
        motion:constraintSetEnd="@layout/activity_password"
        motion:duration="1000">

        <KeyFrameSet>

            <KeyPosition
                motion:framePosition="0"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="img_logo"
                motion:percentX="0"
                motion:percentY="0"/>

            <KeyPosition
                motion:framePosition="75"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="img_logo"
                motion:percentX="1"
                motion:percentY="1"/>

            <KeyPosition
                motion:framePosition="0"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="cog"
                motion:percentX="0"
                motion:percentY="0"/>

            <KeyPosition
                motion:framePosition="100"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="cog"
                motion:percentX="1"
                motion:percentY="1"/>

            <KeyAttribute
                android:rotation="0"
                motion:framePosition="0"
                motion:motionTarget="cog"/>

            <KeyAttribute
                android:rotation="180"
                motion:framePosition="100"
                motion:motionTarget="cog"/>

            <KeyPosition
                motion:framePosition="0"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="cog2"
                motion:percentX="0"
                motion:percentY="0"/>

            <KeyPosition
                motion:framePosition="100"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="cog2"
                motion:percentX="1"
                motion:percentY="1"/>

            <KeyAttribute
                android:rotation="0"
                motion:framePosition="0"
                motion:motionTarget="cog2"/>

            <KeyAttribute
                android:rotation="-180"
                motion:framePosition="100"
                motion:motionTarget="cog2"/>

            <KeyPosition
                motion:framePosition="65"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="fields"
                motion:percentX="0"
                motion:percentY="0"/>

            <KeyPosition
                motion:framePosition="75"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="fields"
                motion:percentX="1"
                motion:percentY="1"/>

        </KeyFrameSet>

    </Transition>

</MotionScene>